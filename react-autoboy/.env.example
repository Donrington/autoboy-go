# React App Environment Variables
# Copy this file to .env.local and update the values

# Django API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_MEDIA_URL=http://localhost:8000/media
REACT_APP_STATIC_URL=http://localhost:8000/static

# Authentication
REACT_APP_JWT_SECRET=your_jwt_secret_here
REACT_APP_JWT_EXPIRY=24h

# Payment Gateway (Paystack/Flutterwave)
REACT_APP_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
REACT_APP_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your_flutterwave_public_key

# Google Services
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_GOOGLE_ANALYTICS_ID=G-your_analytics_id

# App Configuration
REACT_APP_NAME=Autoboy
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# CDN/Storage (for production)
REACT_APP_CDN_URL=https://cdn.autoboy.ng
REACT_APP_IMAGE_OPTIMIZATION=true