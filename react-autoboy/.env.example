# AutoBoy Frontend Environment Variables (Vite)
# Copy this file to .env, .env.development, or .env.production

# ============================================
# BACKEND API CONFIGURATION
# ============================================

# API URL - The base URL for API calls from the frontend
# Use /api/v1 to leverage Vite's proxy (recommended)
VITE_API_URL=/api/v1

# Backend Proxy URL - Where Vite dev server proxies /api requests
# Development: Use local backend
VITE_BACKEND_PROXY_URL=http://localhost:8080
# Production: Use deployed backend
# VITE_BACKEND_PROXY_URL=https://autoboy-go.onrender.com

# ============================================
# APP CONFIGURATION
# ============================================

VITE_APP_NAME=AutoBoy
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# ============================================
# OPTIONAL: PAYMENT GATEWAYS (Future)
# ============================================

# Paystack
# VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Flutterwave
# VITE_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your_flutterwave_public_key

# ============================================
# OPTIONAL: ANALYTICS & MONITORING (Future)
# ============================================

# Google Analytics
# VITE_GOOGLE_ANALYTICS_ID=G-your_analytics_id

# Sentry Error Tracking
# VITE_SENTRY_DSN=https://your_sentry_dsn