# Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=autoboy

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=8080
GIN_MODE=debug
FRONTEND_URL=http://localhost:3000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@autoboy.com
FROM_NAME=AutoBoy

# SMS Configuration (Termii)
SMS_API_KEY=your-termii-api-key
SMS_API_SECRET=your-termii-api-secret
SMS_SENDER=AutoBoy
SMS_BASE_URL=https://api.ng.termii.com/api

# Payment Configuration (Paystack)
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key
PAYSTACK_WEBHOOK_SECRET=your-webhook-secret

# Flutterwave Configuration
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-flutterwave-secret-key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-flutterwave-public-key
FLUTTERWAVE_ENCRYPTION_KEY=your-encryption-key

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Security Configuration
BCRYPT_COST=12
SESSION_TIMEOUT=86400
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=1800

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
AUTH_RATE_LIMIT=5
API_RATE_LIMIT=1000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/autoboy.log

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
CURRENCY_API_KEY=your-currency-api-key

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# Social Login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_PROFILER=false
MOCK_PAYMENTS=false
MOCK_SMS=false
MOCK_EMAIL=false